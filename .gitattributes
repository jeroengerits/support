# Ensure these files are always treated as text and use LF line endings
*.php text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.txt text eol=lf

# Ensure these files are always treated as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Export ignore files
/.gitattributes export-ignore
/.gitignore export-ignore
/.github export-ignore
/tests export-ignore
/.rector-cache export-ignore
/phpunit.xml export-ignore
/pint.json export-ignore
/rector.php export-ignore
