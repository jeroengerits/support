{
  "name": "jeroengerits/support",
  "version": "0.0.1",
  "description": "A PHP library with support classes for various projects",
  "type": "library",
  "keywords": [
    "support",
    "classes",
    "utilities"
  ],
  "license": "MIT",
  "homepage": "https://github.com/jeroengerits/support",
  "authors": [
    {
      "name": "Jeroen Gerits",
      "email": "jeroen@gerits.email"
    }
  ],
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "pestphp/pest": "^4.0",
    "rector/rector": "^2.0",
    "laravel/pint": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "JeroenGerits\\Support\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "scripts": {
    "format": "pint",
    "format:test": "pint --test",
    "refactor": "rector",
    "refactor:dry-run": "rector --dry-run",
    "test": "pest",
    "test:coverage": "pest --coverage",
    "docs": "php phpdoc.phar -d src -t docs --title=\"Support\" --defaultpackagename=\"JeroenGerits\\Support\" docs",
    "docs:clean": "rm -rf docs",
    "all": "pint && rector && pest && composer docs"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
